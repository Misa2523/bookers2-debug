<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
      <!--<th colspan="3"></th>-->
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <!--いいね表示-->
        <td>
          <!--いいねがクリックされている状態と、されていない状態で表示を変える-->
          <% if book.favorited_by?(current_user) %><!--いいねがされてたら-->
            <%= link_to book_favorite_path(book), method: :delete do %><!--いいねを消す-->
              ♥<%= book.favorites.count %>
            <% end %>
          <% else %><!--いいねがまだされてなかったら-->
            <%= link_to book_favorite_path(book), method: :post do %><!--いいねをする-->
              ♥<%= book.favorites.count %>
            <% end %>
          <% end %>
        </td>
        <!--コメント表示-->
        <td>コメント数:<%= book.book_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>