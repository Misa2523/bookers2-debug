<div class='container px-5 px-sm-0'>
  <div class='row'>

    <!--画面左側-->
    <div class='col-md-3'>
      <!--エラーメッセージ表示-->
      <%= render 'layouts/errors', obj: @book %>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>

    <!--画面右側-->
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books %>
    </div>

  </div>
</div>