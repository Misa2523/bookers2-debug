<div class='container'>
  <div class='row'>

    <!--画面左側-->
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>

    <!--画面右側-->
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<!--書籍の詳細-->
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(@book.user) do %>
              <!--ユーザー画像-->
              <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
              <!--ユーザー名-->
              <%= @book.user.name %>
            <% end %>
          </td>
           <!--書籍詳細画面(books/show.html.erb)へ遷移-->
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <!--いいね表示-->
          <td>
            <!--いいねがクリックされている状態と、されていない状態で表示を変える-->
            <% if @book.favorited_by?(current_user) %><!--いいねがされてたら-->
              <%= link_to book_favorite_path(@book), method: :delete do %><!--いいねを消す-->
                ♥<%= @book.favorites.count %>
              <% end %>
            <% else %><!--いいねがまだされてなかったら-->
              <%= link_to book_favorite_path(@book), method: :post do %><!--いいねをする-->
                ♥<%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <!--コメント表示-->
          <td>コメント数:<%= @book.book_comments.count %></td>
          <!--書籍作成者がログインしてるユーザーだったら編集ボタンと削除ボタンを表示-->
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <!--コメント一覧-->
      <table>
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <!--コメント投稿者の画像-->
            <td><%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
            <!--コメント投稿者の名前（クリックしたらそのユーザーの詳細画面へ遷移）-->
            <%= link_to book_comment.user.name, user_path(book_comment.user.id) %></td><!--book_comment.user.name-->
            <!--コメント本文-->
            <td><%= book_comment.comment %></td>
            <!--コメント削除ボタン-->
            <td>
              <% if book_comment.user == current_user %>
                <!--book_comment.bookはbook_commentの親のbookの情報（id）、book_commentはbook_commentの情報（id）を表す-->
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <!--コメント投稿フォーム-->
      <div>
        <!--コメントはbookに結び付いたbook_commentであるため、変数を２つ用意-->
        <!--book_commentをcreateするためのリクエストは、ルーティングもネスト（親子関係）してるため、上記２つの情報が必要-->
        <%= form_with model: [@book, @book_comment] do |f| %>
          <div><%= f.text_area :comment, class: 'form-control' %></div>
          <div><%= f.submit "送信" %></div>
        <% end %>
      </div>
    </div>

  </div>
</div>