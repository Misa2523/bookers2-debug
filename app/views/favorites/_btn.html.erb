<!--いいね表示-->

<!--いいねがクリックされている状態と、されていない状態で表示を変える-->
<% if book.favorited_by?(current_user) %><!--いいねがされてたら-->
  <%= link_to book_favorite_path(book), method: :delete do %><!--いいねを消す-->
    ♥<%= book.favorites.count %>
  <% end %>
<% else %><!--いいねがまだされてなかったら-->
  <%= link_to book_favorite_path(book), method: :post do %><!--いいねをする-->
    ♥<%= book.favorites.count %>
  <% end %>
<% end %>